<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.comp211.quiz.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arithmetic"
        android:id="@+id/title"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#ff485e"
        android:layout_alignParentTop="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_format_list_numbered_black_24dp"
        android:padding="15dp"
        android:layout_above="@+id/spQuiz"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singleplayer Mode"
        android:id="@+id/spQuiz"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/mpQuiz"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplayer Mode"
        android:id="@+id/mpQuiz"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/leaderboard"
        android:layout_alignLeft="@+id/spQuiz"
        android:layout_alignEnd="@+id/spQuiz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/leaderboard"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/instructionsButton"
        android:layout_alignLeft="@+id/spQuiz"
        android:layout_alignEnd="@+id/spQuiz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructionsButton"
        android:textSize="20dp"
        android:padding="20dp"
        android:outlineProvider="bounds"
        android:layout_above="@+id/aboutButton"
        android:layout_alignLeft="@+id/spQuiz"
        android:layout_alignEnd="@+id/spQuiz" />

</LinearLayout>


